<script>
$('#btnBuscar').click(function () {
    var isChecked = $('input[name=select-industry]').is(':checked');
    if (!isChecked) {
        alert('No has seleccionado ninguna placa');
        return;
    }
    else {
        document.forms['formIdPlacas'].submit();
    }
});
</script>